<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swaranya.notificationv2.MainNotification">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_vertical"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/notibar5" />

    <Button
        android:id="@+id/historyBut"
        style="@android:style/Widget.Holo.Button.Borderless.Small"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="historyBut"
        android:text="@string/historyBut" />

    <Button
        android:id="@+id/editBut"
        style="@android:style/Widget.Holo.Button.Borderless.Small"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/historyBut"


        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/historyBut"
        android:layout_toRightOf="@+id/historyBut"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="editBut"
        android:text="@string/editBut"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/confirmBut"
        style="@android:style/Widget.Holo.Button.Borderless.Small"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/editBut"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="50dp"
        android:onClick="confirmedBut"
        android:text="@string/confirmBut" />

</RelativeLayout>
